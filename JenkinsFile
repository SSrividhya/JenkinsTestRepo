pipeline {
  agent any
    stages{
      stage('Stage 1'){
        steps{
          echo 'Stage 1 of Pipeline'
          }
         }
       stage('Stage 2'){
        steps{
          input('Can we proceed to next stage?')
          }
         }
       stage('Stage 3'){
        when{      
            branch "master"          
           }
         steps{
          echo 'Stage 3 with When condition'
          }
         }
		stage('Stage 4 parallel execution'){
			parallel {
				stage('Stage 4 a'){
					steps{
						echo 'Stage 4 a of pipeline'
					}
				}
				stage('Stage 4 b - reuse node is false - so running in docker agent'){
					agent{
					 docker{
						reuseNode false
						image 'ubuntu'
						}
					}
					steps{
						echo 'Stage 4 b of pipeline'
					}
				}
			}
		}
	}
}
